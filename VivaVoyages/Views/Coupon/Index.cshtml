@model IEnumerable<VivaVoyages.Models.Coupon>

@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<!DOCTYPE html>

<html data-bs-theme="light" lang="en" style>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <title>Index</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>

<body>
    <div class="container">
        <div></div>
        <div style="padding: 35px;">
            <div class="row" style="border-radius: 23px;border: 1.4px solid rgb(24,113,203);">
                <div class="col m-auto">
                    <div class="row" style="border-bottom: 0.6px solid rgb(20,114,208);">
                        <div class="col">
                            <h1>Coupons</h1>
                            <p>This is Coupons</p>
                        </div>
                        <div class="col"></div>
                        <div class="col d-lg-flex justify-content-center justify-content-lg-end align-items-lg-center">
                            <ul class="list-inline d-grid d-lg-flex">
                                <li class="list-inline-item d-md-flex justify-content-md-center align-items-md-center">
                                    <button class="btn btn-primary btn-lg" type="button" asp-action="Create"
                                        style="padding: 17px 16px;font-size: 22px;">Add new coupon</button>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="table-responsive" style="margin: 10px;">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>CouponCode</th>
                                    <th>Discount</th>
                                    <th>DateStart</th>
                                    <th>DateEnd</th>
                                    <th class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="m-auto">@item.CouponCode</td>
                                        <td class="m-auto">@item.Discount</td>
                                        <td class="m-auto">@item.DateStart</td>
                                        <td class="m-auto">@item.DateEnd</td>
                                        <td class="text-center m-auto">
                                            <a asp-action="Detail" asp-route-id="@item.CouponCode" class="btn"
                                                style="width: 90px;height: 45px;color: rgb(0,128,255);font-size: 20px;"><svg
                                                    class="bi bi-info-square" xmlns="http://www.w3.org/2000/svg" width="1em"
                                                    height="1em" fill="currentColor" viewBox="0 0 16 16">
                                                    <path
                                                        d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z">
                                                    </path>
                                                    <path
                                                        d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0">
                                                    </path>
                                                </svg></a>
                                            <a asp-action="Edit" asp-route-id="@item.CouponCode" class="btn"
                                                style="width: 90px;height: 45px;color: rgb(0,128,255);font-size: 20px;"><svg
                                                    class="bi bi-pen" xmlns="http://www.w3.org/2000/svg" width="1em"
                                                    height="1em" fill="currentColor" viewBox="0 0 16 16">
                                                    <path
                                                        d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001m-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z">
                                                    </path>
                                                </svg></a>
                                            <a asp-action="Delete" asp-route-id="@item.CouponCode" class="btn"
                                                style="width: 90px;height: 45px;color: rgb(0,128,255);font-size: 20px;"><svg
                                                    class="bi bi-trash" xmlns="http://www.w3.org/2000/svg" width="1em"
                                                    height="1em" fill="currentColor" viewBox="0 0 16 16">
                                                    <path
                                                        d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z">
                                                    </path>
                                                    <path
                                                        d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z">
                                                    </path>
                                                </svg></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>

</html>