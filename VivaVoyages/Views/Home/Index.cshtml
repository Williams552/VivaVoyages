            </div>
        </div>
        <div class="row"
            style="padding-bottom: 37px;padding-top: 37px;background: rgb(238, 227, 227) ;border-radius: 27px;width: 1271px;margin-left: 22px;margin-right: 23px;">
            <div class="col" style="position: relative;"><img
                    style="margin-left: 55px;width: 210px;height: 210px;padding: 0px;" src="~/img/1.png">
                <p
                    style="position: absolute;margin-top: -125px;margin-left: 96px;font-size: 27px;font-family: Montserrat, sans-serif;font-weight: bold;">
                    <span style="color: rgb(255, 255, 255);">HỘI&nbsp;AN</span>
                </p>
            </div>
            <div class="col"><img style="margin-left: 51px;width: 210px;height: 210px;padding: 0px;" src="~/img/2.png">
                <p
                    style="position: absolute;margin-top: -125px;margin-left: 86px;font-size: 27px;font-family: Montserrat, sans-serif;font-weight: bold;">
                    <span style="color: rgb(255, 255, 255);">ĐÀ&nbsp;NẴNG</span>
                </p>
            </div>
            <div class="col"><img style="margin-left: 48px;width: 210px;height: 210px;padding: 0px;" src="~/img/3.png">
                <p
                    style="position: absolute;margin-top: -125px;margin-left: 110px;font-size: 27px;font-family: Montserrat, sans-serif;font-weight: bold;">
                    <span style="color: rgb(255, 255, 255);">SAPA</span>
                </p>
            </div>
            <div class="col"><img style="margin-left: 52px;width: 210px;height: 210px;padding: 0px;" src="~/img/4.png">
                <p
                    style="position: absolute;margin-top: -125px;margin-left: 126px;font-size: 27px;font-family: Montserrat, sans-serif;font-weight: bold;">
                    <span style="color: rgb(255, 255, 255);">HUẾ</span>
                </p>
            </div>
        </div>
        <div class="row">
            <div id="viewMoreBtn" class="col" style="margin-left: 1px;"><button class="btn btn-primary" type="button"
                    style="width: 171.1px;margin: 0px;height: 46.6px;margin-left: 565px;margin-top: 26px;border-radius: 10px;">View
                    More</button></div>
        </div>
    </div>

    <div class="container" style="margin-top: 50px;">
    <div class="row justify-content-center" style="margin-left: 100px;">
        @foreach (var tour in Model.Skip(3).Take(2))
        {
            <div class="col-6 mb-4">
                <div style=" width: 500px;" class="tour-item">
                    <a href="@Url.Action("ViewTourDetails", "ListTourCustomer", new { id = tour.TourId })">
                        <img src="@Url.Content(tour.ImagePath)" alt="Tour Image" class="tour-imagea">
                    </a>
                    <div class="tour-list">
                        <p class="tini">
                            <span>@tour.DateStart.ToString("dd/MM/yyyy")</span> - <span>@tour.TourDates day</span>
                        </p>
                        <strong>@tour.TourName</strong>
                        @foreach (var destination in tour.Destinations)
                        {
                            <p>@destination.Description</p>
                        }
                        <div class="tour-cost">
                            <a href="@Url.Action("ViewTourDetails", "ListTourCustomer", new { id = tour.TourId })" class="btn btn-primary">Learn More</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
