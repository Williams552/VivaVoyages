                            </path>
                        </svg></li>
                </ul>
                <p class="mb-0">Copyright © 2024 ViVaVoyages</p>
            </div>
        </footer>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


    <script>
        const btn_open1 = document.getElementById('btn-open1');
        const btn_close1 = document.getElementById('btn-close1');
        const modal_container1 = document.getElementById('modal-container1');
        const modal_demo1 = document.getElementById('modal1');

        btn_open1.addEventListener('click', () => {

            modal_container1.classList.add('show1');
        });
        btn_close1.addEventListener('click', () => {

            modal_container1.classList.remove('show1');
        });

        modal_container1.addEventListener('click', (e) => {
            if (!modal_demo1.contains(e.target)) {
                btn_close1.click();
            }
        });
    </script>
</body>

</html>