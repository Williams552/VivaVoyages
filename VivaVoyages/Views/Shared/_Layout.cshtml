<!DOCTYPE html>
<html data-bs-theme="light" lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Untitled</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css " />
    <link rel="stylesheet" href="~/css/Stylehome.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/TourList.css" asp-append-version="true">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        /* Thêm mã CSS tại đây */
        body {
            color: var(--bs-secondary-bg);
            background: var(--bs-body-bg);
            border-color: var(--bs-body-bg);
            --bs-secondary: #0178e3;
            --bs-secondary-rgb: 1, 120, 227;
        }

        header {
            background: #fdf4e6;
        }

        .navbar-toggler-icon {
            background-color: #fff;
        }

        .navbar-nav .nav-link {
            color: #886b27;
            margin-right: 15px;
            transition: color 0.3s;
        }

        .navbar-nav .nav-link:hover {
            color: #f39c12;
        }

        .bi-person {
            font-size: 30px;
            color: #fff;
            margin-left: 20px;
            transition: color 0.3s;
        }

        .bi-person:hover {
            color: #f39c12;
        }

        /* Thêm mã CSS cho footer */
        footer {
            background: #fdf4e6;
            color: #000;
            /* Màu chữ cho footer */
        }

        .footer-content h4 {
            color: #000;
            /* Màu chữ cho tiêu đề */
        }

        .footer-content p {
            color: #000;
            /* Màu chữ cho nội dung */
        }

        .list-inline-item svg {
            fill: #000;
            /* Màu biểu tượng mạng xã hội */
            margin-right: 10px;
            transition: fill 0.3s;
        }

        .list-inline-item svg:hover {
            fill: #f39c12;
            /* Màu khi di chuột qua */
        }

        .mb-0 {
            color: #000;
            /* Màu chữ cho nội dung bản quyền */
        }
    </style>
</head>

<body>

    <header>
        <nav class="navbar navbar-expand-md py-3" style="background: #fdf4e6;">
            <div class="container"><a class="navbar-brand d-flex align-items-center" asp-controller="Home"
                    asp-action="Index"><span><img width="100" height="80" src="~/img/Logo.png"></span></a><button
                    data-bs-toggle="collapse" class="navbar-toggler" data-bs-target="#navcol-3"><span
                        class="visually-hidden">Toggle navigation</span><span
                        class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navcol-3">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item"><a class="nav-link active" asp-controller="ListTourCustomer"
                                asp-action="ListTours"><strong>List Tour</strong></a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="ListTourCustomer"
                                asp-action="ListToursWithCoupon"><strong>Promotion Tour</strong></a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home"
                                asp-action="handbook"><strong>Hand book</strong></a></li>
                        <li class="nav-item"><a id="btn-open1" class="nav-link" href="#"><strong>Support</strong></a>
                        </li>
                    </ul>
                    @{
                        string iconClass = "bi bi-person";
                        string registerText = "Register | ";
                        string iconText = "User"; // Default icon text
                        var loggedInCustomer = ViewContext.HttpContext.Session.GetObject<Customer>("LoggedInCustomer");
                        if (loggedInCustomer != null) // Check if session exists
                        {
                            // Replace icon with Fullname
                            iconText = "Wellcome, " + loggedInCustomer.FullName;
                            registerText = "";
                        }
                        else
                        {
                            iconText = "Login";
                        }
                    }
                    <span><a style="font-size: medium; color: #000000; text-decoration: none;" asp-action="Register"
                            asp-controller="LoginRegister">@registerText</a>
                        <a asp-controller="Profile" asp-action="Index" style="text-decoration: none;">
                            <span style="font-size: medium; color: #000000;">@iconText</span><i
                                style="font-size: larger; color: #000000;" class="@iconClass"></i>
                        </a></span>


                </div>
            </div>
        </nav>
    </header>
    @* MODAL *@
    <div id="modal-container1">
        <div class="modaldemo1" id="modal1">
            <div class="modal-header1">
                <h5>Contact</h5>

                <button id="btn-close1"><i class="bi bi-x"></i></button>
            </div>
            <div class="modal-body1">
                <p>Email: vivavoyages8@gmail.com</p>
                <p>Phone: 0706506774</p>
                <i>Address: An Binh, Ninh Kieu, can Tho, FPT University</i>

            </div>
        </div>
    </div>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div>
         <footer class="text-center" style="background: #fdf4e6;">
