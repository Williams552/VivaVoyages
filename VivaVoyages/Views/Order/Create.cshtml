@model Order
@{
    var customerList = ViewData["CustomerId"];
    var staffList = ViewData["StaffId"];
    var tourList = ViewData["TourId"];
}

<h2>Create Order</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="CustomerId">Customer</label>
        <select asp-for="CustomerId" asp-items="@(new SelectList((System.Collections.IEnumerable)customerList, "CustomerId", "FullName"))"
            class="form-control"></select>
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StaffId">Staff</label>
        <select asp-for="StaffId" asp-items="@(new SelectList((System.Collections.IEnumerable)staffList, "StaffId", "FullName"))"
            class="form-control"></select>
        <span asp-validation-for="StaffId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TourId">Tour</label>
        <select asp-for="TourId" asp-items="@(new SelectList((System.Collections.IEnumerable)tourList, "TourId", "TourName"))"
            class="form-control"></select>
        <span asp-validation-for="TourId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
