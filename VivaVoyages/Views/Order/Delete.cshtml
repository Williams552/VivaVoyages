@model VivaVoyages.Models.Order

<h2>Delete Order</h2>

<div>
    <h4>Are you sure you want to delete this order?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Order ID
        </dt>
        <dd class="col-sm-10">
            @Model.OrderId
        </dd>

        <!-- Repeat similar sections for Customer, Staff, Tour, Status, and DateCreated -->
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="OrderId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
