@model IEnumerable<VivaVoyages.Models.Order>

<h2>Orders</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer</th>
            <th>Staff</th>
            <th>Tour</th>
            <th>Status</th>
            <th>Date Created</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.CustomerId</td>
                <td>@order.StaffId</td>
                <td>@order.TourId</td>
                <td>@order.Status</td>
                <td>@order.DateCreated.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@order.OrderId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@order.OrderId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
