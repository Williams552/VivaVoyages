@model IEnumerable<VivaVoyages.Models.CustomerTourView>

@{
    ViewData["Title"] = "GetCustomerTours";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />
    <title>Document</title>
</head>

<body>
    <main>

        <div class="container">
            <div class="row">
                <!-- Left Column -->
                <div class="col-md-4">
                    <div class="div">
                        <div class="div-2">
                            <img src="~/img/account.jpg" alt="" style="width: 50px;height: 50px;">
                            <div class="div-3">@ViewData["FullName"]</div>
                        </div>
                        <div class="div-4"></div>
                        <a asp-action="Index" asp-route-id="@ViewData["CustomerId"]" class="div-5"
                            style="text-decoration: none;">Account</a>
                        <a asp-action="Index" asp-route-id="@ViewData["CustomerId"]" class="div-9"
                            style="text-decoration: none;">Personal Information</a>
                        <a asp-action="ChangePassword" asp-route-id="@ViewData["CustomerId"]" class="div-9"
                            style="text-decoration: none;">Change Password</a>
                        <a asp-action="GetCustomerTours" asp-route-id="@ViewData["CustomerId"]" class="div-11">Tour
                            management</a>
                        <div class="div-12">sign out</div>
                    </div>
                </div>


                <div class="col-md-8">
                    <div class="div_">
                        <h2>Customer Tours</h2>
                        @if (Model != null && Model.Any())
                        {
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Tour Name</th>
                                        <th>Passengers</th>
                                        <th>Date Start</th>
                                        <th>Tour Dates</th>
                                        <th>Tour Guide</th>
                                        <th>Cost</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var tour in Model)
                                    {
                                        <tr>
                                            <td>@tour.TourName</td>
                                            <td>@tour.PassengerCount</td>
                                            <td>@tour.DateStart</td>
                                            <td>@tour.TourDates</td>
                                            <td>@tour.TourGuide</td>
                                            <td>@tour.Cost</td>
                                            <td>@tour.Status</td>
                                            <td>
                                                <a class="btn btn-danger" asp-controller="ListTourCustomer"
                                                    asp-action="ViewTourDetails" asp-route-id="@tour.OrderId">Details</a> |
                                                <a class="btn btn-danger" asp-controller="Booking" asp-action="OrderCancel"
                                                    asp-route-id="@tour.OrderId">Cancel</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <p>No tours found for this customer.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>

</html>