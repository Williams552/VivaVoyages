@model Customer

@{
    Layout="";
    ViewData["Title"] = "Register";
    
}



<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css "/>
    <link rel="stylesheet" href="~/css/Stylehome.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/TourList.css" asp-append-version="true">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/-Login-form-Page-BS4--Login-form-Page-BS4.css"  asp-append-version="true">
    <link rel="stylesheet" href="~/css/VentasPro-Login.css"  asp-append-version="true">
    
    
</head>

<body>
    <div id="main" style="height: 1100px;">
        <div class="text-center" id="info" style="height: 1050px; margin-top: 100px;width: 421px;max-width: 445px;"><img id="ventaspro-logo" src="~/img/ThePhong3.png" width="200" style="margin-top: 5px;">
            <h4 class="text-center" style="margin-top: -7px;">WELCOME TO VIVAVOYAGES</h4>
            <form asp-action="Register"  method="post" class="text-start" id="form-login" style="margin-top: 16px; height: 100px;">
                @* <div asp-validation-summary="All" class="text-danger"></div> *@
                <div class="mb-3"><label asp-for="FullName" class="form-label" id="lbl-usuario" for="txt-usuario">Full Name</label><input asp-for="FullName" class="form-control" type="text" id="txt-usuario">
                 <span asp-validation-for="FullName" class="text-danger"></span></div>
                <div class="mb-3"><label asp-for="Address" class="form-label" id="lbl-usuario-2" for="txt-usuario">Address</label><input asp-for="Address" class="form-control" type="text" id="txt-usuario-2">
                <span asp-validation-for="Address" class="text-danger"></span></div>
                <div class="mb-3"><label  asp-for="Email" class="form-label" id="lbl-usuario-3" for="txt-usuario">Email</label><input  asp-for="Email" class="form-control" type="text" id="txt-usuario-3">
                <span asp-validation-for="Email" class="text-danger"></span></div>
                <div class="mb-3"><label asp-for="Dob" class="form-label" id="lbl-usuario-6" for="txt-usuario">Date of Birth</label><input asp-for="Dob" class="form-control" type="date"><span asp-validation-for="Dob" class="text-danger"></span></div>
                <div class="mb-3"><label asp-for="PhoneNumber"  class="form-label" id="lbl-usuario-4" for="txt-usuario">Phone Number</label><input asp-for="PhoneNumber"class="form-control" type="tel"><span asp-validation-for="PhoneNumber" class="text-danger"></span></div>
                <div class="mb-3"><label asp-for="Gender" class="form-label" id="lbl-usuario-5" for="txt-usuario">Gender</label>
                   <div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="form-check">
                <input asp-for="Gender" value="M" class="form-check-input" checked type="radio" id="formCheck-1" name="gender">
                <label class="form-check-label" for="formCheck-1">Male</label>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-check">
                <input asp-for="Gender" value="F" class="form-check-input" type="radio" id="formCheck-2" name="gender">
                <label class="form-check-label" for="formCheck-2">Female</label>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-check">
                <input asp-for="Gender" value="O" class="form-check-input" type="radio" id="formCheck-3" name="gender">
                <label class="form-check-label" for="formCheck-3">Other</label>
            <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>
    </div>
</div>

                </div>
                <div class="mb-3"><label asp-for="Password" class="form-label" id="lbl-password" for="txt-password">Password</label><input asp-for="Password" class="form-control" type="password" id="txt-password"><span asp-validation-for="Password" class="text-danger"></span></div>
                <div class="mb-3"><label  asp-for="ConfirmPassword" class="form-label" id="lbl-usuario-1" for="txt-usuario">Confirm Password</label><input  asp-for="ConfirmPassword" class="form-control" type="password" id="txt-password-1"><span asp-validation-for="ConfirmPassword" class="text-danger"></span></div>
                <div style="text-align: center;"> <button class="btn btn-primary" id="btn-sesion" type="submit" style="--bs-primary: #256db4;--bs-primary-rgb: 37,109,180;background: #256db4;width: 108.8625px;  ">Sign Up</button></div>
               <div>
                    <input type="hidden" asp-for="Status" value="Authenticating" />
                </div>

            </form>
        </div>
    </div>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>


