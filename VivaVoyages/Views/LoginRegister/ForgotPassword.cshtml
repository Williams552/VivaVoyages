@model ForgotPassword
@{
    Layout="";
    ViewData["Title"] = "ForgotPassword";
}
<head>
    
    <title>Forget password</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css "/>
    <link rel="stylesheet" href="~/css/Stylehome.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/TourList.css" asp-append-version="true">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/-Login-form-Page-BS4--Login-form-Page-BS4.css"  asp-append-version="true">
    <link rel="stylesheet" href="~/css/VentasPro-Login.css"  asp-append-version="true">
</head>

<body>
    <div id="main">
        <div class="text-center" id="info" style="height: 454px;margin-top: 62px;"><img id="ventaspro-logo" src="~/img/ThePhong3.png" width="200">
            <h3 class="text-center">Forget Password</h3>
            <form asp-action="ForgotPassword" method="post" class="text-start" id="form-login">
                <div class="mb-3">
                    <label class="form-label" id="lbl-usuario" for="txt-usuario">Email</label>
                <input asp-for="Email" class="form-control" type="text" id="txt-usuario"><span asp-validation-for="Email" class="text-danger"></span></div>
           <button class="btn btn-primary" id="btn-sesion" type="submit" style="--bs-primary: #256db4;--bs-primary-rgb: 37,109,180;background: #256db4;width: 89.8625px;">Enter</button>
            </form>
        </div>
    </div>
        <script src="~/js/bootstrap.min.js"></script>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}