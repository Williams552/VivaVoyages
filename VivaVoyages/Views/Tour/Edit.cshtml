@model VivaVoyages.Models.Tour

@{
    Layout = "_LayoutDashboard";
}

<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Edit tour</title>
    <link rel="stylesheet" href="assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="assets/fonts/fontawesome-all.min.css">
    <link rel="stylesheet" href="assets/fonts/font-awesome.min.css">
    <link rel="stylesheet" href="assets/fonts/fontawesome5-overrides.min.css">

</head>

<body>

    <h4>Edit Tour</h4>
    <hr />
    <div>

    </div>
    <div class="row" style="justify-content: center;">
        <div class="col-md-6">
            <form asp-action="Edit" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="TourId" />
                <div style="border-radius: 23px;border: 1.4px solid rgb(24,113,203); ; padding: 10 10;">
                    <div class="form-group">
                        <label asp-for="TourName" class="control-label"></label>
                        <input asp-for="TourName" class="form-control" />
                        <span asp-validation-for="TourName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ExpectedProfit" class="control-label"></label>
                        <input type="number" asp-for="ExpectedProfit" class="form-control" />
                        <span asp-validation-for="ExpectedProfit" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DateStart" class="control-label"></label>
                        <input type="date" asp-for="DateStart" class="form-control" />
                        <span asp-validation-for="DateStart" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TourDates" class="control-label"></label>
                        <input type="number" asp-for="TourDates" class="form-control" />
                        <span asp-validation-for="TourDates" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaxPasseger" class="control-label"></label>
                        <input type="number" asp-for="MaxPasseger" class="form-control" />
                        <span asp-validation-for="MaxPasseger" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TourGuide" class="control-label"></label>
                        <input asp-for="TourGuide" class="form-control" />
                        <span asp-validation-for="TourGuide" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cost" class="control-label"></label>
                        <input type="number" asp-for="Cost" class="form-control" />
                        <span asp-validation-for="Cost" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Tax" class="control-label"></label>
                        <input type="number" asp-for="Tax" class="form-control" />
                        <span asp-validation-for="Tax" class="text-danger"></span>
                    </div>
                    @* <div class="form-group">
                        <label asp-for="CouponCode" class="control-label"></label>
                        <input  asp-for="CouponCode" class="form-control" />
                        <span asp-validation-for="CouponCode" class="text-danger"></span>
                    </div> *@

                    <div class="form-group">
                        <label asp-for="ImageFile" class="control-label">Tour Image</label>
                        <input asp-for="ImageFile" class="form-control" />
                        <!-- Destination Inputs -->
                        <div
                            style="border-radius: 23px;border: 1.4px solid rgb(24,113,203); padding: 10 10; margin: 20px 0;">
                            <h2>Destinations</h2>
                            @if (Model.Destinations.Any())
                            {
                                <table>
                                    <tr>
                                        <th>Destination ID</th>
                                        <th>Description</th>
                                        <th>Date Visit</th>
                                        <th>Place Id</th>
                                        <th> </th>
                                    </tr>
                                    @foreach (var destination in Model.Destinations)
                                    {
                                        <tr>
                                            <td>@destination.DestinationId</td>
                                            <td>@destination.Description</td>
                                            <td>@destination.DateVisit</td>
                                            <td>@destination.PlaceId</td>
                                            <td>
                                                <a asp-action="EditAndReturn" asp-controller="Destination"
                                                    asp-route-id="@destination.DestinationId"
                                                    asp-route-tourId="@Model.TourId">Edit
                                                    Destination</a>
                                                <a asp-action="DeleteAndReturn" asp-controller="Destination"
                                                    asp-route-id="@destination.DestinationId"
                                                    asp-route-tourId="@Model.TourId">Delete
                                                    Destination</a>

                                            </td>

                                        </tr>
                                    }
                                </table>
                            }
                            else
                            {
                                <p>No destinations found for this tour.</p>
                            }
                            <a asp-action="CreateAndReturn" asp-controller="Destination"
                                asp-route-tourId="@Model.TourId">Add Destination</a>
                        </div>

                        <div class="form-group" style="text-align: center;">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                        <input type="hidden" asp-for="TourId" />
            </form>
        </div>
    </div>

    <div style="text-align: center;">
        <a class="btn btn-primary" asp-action="Index">Back to List</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</body>