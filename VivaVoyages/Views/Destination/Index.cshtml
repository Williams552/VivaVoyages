@model IEnumerable<VivaVoyages.Models.Destination>

@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>destination</title>
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/fonts/fontawesome-all.min.css">
    <link rel="stylesheet" href="~/css/Footer-Dark-icons.css">
</head>
<body>
    <div class="container">
        <div style="padding-top: 100px;">
            <div class="row" style="border-radius: 23px;border: 1.4px solid rgb(24,113,203) ;">
                <div class="col m-auto">
                    <div class="row" style="border-bottom: 0.6px solid rgb(20,114,208) ;">
                        <div class="col">
                            <h1>Destination</h1>
                            <p>With Staff</p>
                        </div>
                        <div class="col"></div>
                        <div
                            class="col d-md-flex d-lg-flex justify-content-center justify-content-md-end align-items-md-center justify-content-lg-end align-items-lg-center">
                            <ul class="list-inline d-grid d-lg-flex">
                                <li class="list-inline-item d-md-flex justify-content-md-center align-items-md-center">
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="table-responsive" style="margin: 10px;">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Description</th>
                                    <th><strong><span style="color: rgb(33, 37, 41);">DateVisit</span></strong></th>
                                    <th><span style="color: rgb(33, 37, 41); background-color: var(--bs-table-bg);">Place</span></th>
                                    <th><span style="color: rgb(33, 37, 41); background-color: var(--bs-table-bg);">Tour</span></th>
                                    <th class="text-center">Acction</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model) {
                                    <tr>
                                        <td>
                                            @item.Description
                                        </td>
                                        <td>
                                            @item.DateVisit
                                        </td>
                                        <td>
                                            @item.Place.PlaceId
                                        </td>
                                        <td>
                                            @item.Tour.TourId
                                        </td>
                                        <td class="text-center m-auto">
                                            
                                           </td>
                                    </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>
